        </div>

    </section>
    <section class="medium-16 columns news">
        <div class="title medium-16 columns">
            <h4>
                <a>تازه ترین خبر ها</a>
            </h4>
            <div class="titlebar-meta">
                <a href="@Url.Action("News")" class="see-all another">مشاهده همه خبر ها <span>»</span></a>
            </div>
        </div>
        <div id="NewsContiner" class="medium-16 columns body owl-carousel">

            @{ foreach(var news in Model.News){
               
               <article>
                <div class="inner">
                    <div class="image"><a><img src="@(news.Image != "" ? "/image/news/"+news.Image : "/content/image/image-slider-5.jpg") " /></a></div>
                    <div class="head">
                        <h2><a> @news.Title</a></h2>
                    </div>
                    <div class="description">
                        <p>@news.shortNews</p>
                        <div class="buttomcontiner">
                            <div class="readmore">
                                <div class="innermore"><a href="@Url.Action("Post", new {id=news.Id })">بیشتر بخوانید</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </article>
               
               }}
            











        </div>
    </section>

    <section class="medium-16 columns" style="margin-bottom:15px;">


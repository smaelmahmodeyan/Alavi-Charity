                <div>
                    <h5>@item.FullName</h5>
                    <p>@item.Education</p>
                    <div class="avatar">
                        <img src="@(item.Image!=""?item.Image:"/content/image/avatar.png")"  />
                    </div>
                    <div class="flow"><span>@item.Avarge</span>@Html.Raw("معدل")</div>
                    <div class="hami">
                        <a>
                            <span>
                                <i></i>حامی شوید
                            </span>
                        </a>
                    </div>
                </div>
            </div>
            }
                    }
         
        </div>

    </section>

    <section class="medium-16 columns msg">
        <div class="imagemsage">
            <a><img src="/content/image/h.jpg" /></a>
            <p style="font-family: BElham;position: absolute;top: 83px;right: 418px;z-index: 9;font-size: 28px;">خیریه علوی مشهد</p>

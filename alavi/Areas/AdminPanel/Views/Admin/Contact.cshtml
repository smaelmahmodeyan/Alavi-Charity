@{
    ViewBag.Title = "Contact";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Master.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">لیست تماس</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="tblContact" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>شماره</th>
                                <th>نام</th>
                                <th>ایمیل</th>


                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>
@section Scripts{

    <script>

        $(document).ready(function () {
            var oTable = $('#tblContact').dataTable({
                "bServerSide": true,
                "sAjaxSource": "/api/Contact/GetlistContacts/",
                "bProcessing": true,
                "columns": [
            { "data": "Id", "bSearchable": false },
            { "data": "Name" },
             { "data": "Email" }



                ]
            });
        })



    </script>
}




